{
  "name": "bloxparty",
  "description": "Multiplayer Tetris built with Deku",
  "version": "2.0.1",
  "author": "Kevin Neff <kvnneff@gmail.com>",
  "bugs": {
    "url": "https://github.com/bloxparty/bloxparty/issues"
  },
  "dependencies": {
    "bloxparty-board": "^1.0.9",
    "bus": "^0.1.0",
    "component-clone": "^0.2.2",
    "component-emitter": "^1.2.0",
    "cuid": "*",
    "deep-diff": "^0.3.3",
    "deku": "^0.5.5",
    "deku-form": "^1.1.4",
    "flexboxgrid": "^6.3.0",
    "localstorage-ns": "^1.0.2",
    "moment": "^2.10.6",
    "postcss-copy-assets": "^0.3.0",
    "postcss-middleware": "^1.0.0",
    "query-string": "^2.4.1",
    "random-name": "^0.1.1",
    "socket.io-client": "^1.3.7",
    "suitcss-base": "^0.8.0",
    "suitcss-components-button": "^4.0.0",
    "virtual-element": "^1.2.0",
    "wayfarer": "^5.0.1"
  },
  "devDependencies": {
    "assert-element": "^0.3.1",
    "autoprefixer": "^6.0.3",
    "babelify": "^6.3.0",
    "browserify": "^11.1.0",
    "browserify-test": "^2.0.0",
    "chokidar-cli": "^1.0.1",
    "compat-trigger-event": "^1.0.0",
    "component-mock": "0.0.2",
    "dependency-check": "^2.5.1",
    "fixpack": "^2.2.0",
    "http-server": "^0.8.0",
    "mocha": "^2.3.2",
    "mochify": "^2.13.0",
    "postcss": "^5.0.10",
    "postcss-cli": "^2.3.2",
    "postcss-cssnext": "^2.1.0",
    "postcss-import": "^7.0.0",
    "standard": "^5.2.2",
    "uglifyify": "^3.0.1"
  },
  "homepage": "https://github.com/bloxparty/bloxparty-server#readme",
  "keywords": [
    "game",
    "multiplayer",
    "tetris"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": "https://github.com/bloxparty/bloxparty.git",
  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-css": "mkdir -p build & postcss -u postcss-copy-assets -u postcss-import -u postcss-cssnext -o ./build/index.css ./lib/index.css",
    "build-js": "mkdir -p build & browserify lib/index.js -t [babelify --ignore socket.io-client] --outfile build/index.js",
    "clean": "rm -rf ./build",
    "lint": "standard ./lib/**/*.js && fixpack",
    "release": "npm run clean && npm i && npm run build && npm run package",
    "server": "http-server ./",
    "start": "http-server & npm run watch",
    "test": "mochify --transform [babelify --ignore socket.io-client] test/index.js",
    "watch": "npm run watch-css & npm run watch-js",
    "watch-css": "chokidar './lib/**/*.css' -c 'npm run build-css'",
    "watch-js": "chokidar './lib/**/*.js' -c 'npm run build-js'"
  }
}
